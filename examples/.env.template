# Environment Configuration Template
# Copy this file to .env in the project root and customize as needed

# Browser Configuration
BROWSER_TYPE=chrome                    # Options: chrome, firefox, edge
BROWSER_HEADLESS=true                  # true for headless mode, false for visible browser
BROWSER_TIMEOUT=30                     # Default timeout in seconds
BROWSER_WINDOW_SIZE=1920x1080          # Browser window size (WxH)
BROWSER_USER_AGENT=                    # Custom user agent (optional)
BROWSER_DOWNLOAD_DIR=                  # Download directory path (optional)

# Server Configuration  
MCP_TRANSPORT=stdio                    # Options: stdio, sse, http
MCP_HOST=localhost                     # Host for SSE/HTTP transport
MCP_PORT=8000                         # Port for SSE/HTTP transport

# Development Settings
DEBUG_MODE=false                       # Enable debug logging
SCREENSHOT_DIR=./screenshots           # Directory for screenshot storage
LOG_LEVEL=INFO                        # Options: DEBUG, INFO, WARNING, ERROR

# Browser-Specific Options
CHROME_OPTIONS=--disable-dev-shm-usage,--no-sandbox
FIREFOX_OPTIONS=
EDGE_OPTIONS=

# Proxy Configuration (optional)
HTTP_PROXY=
HTTPS_PROXY=

# Performance Settings
PAGE_LOAD_TIMEOUT=30
IMPLICIT_WAIT=10
EXPLICIT_WAIT=20